<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Materials -->

        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>

        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>

    <!-- Links -->

        <link name="base_link">
            <visual>
                <origin xyz="0 0 0.05"/>
                <geometry>
                    <box size="0.05 0.05 0.05"/>
                </geometry>
                <material name="white"/>
            </visual>
        </link>

        <joint name="arm_joint" type="revolute">
            <origin xyz="0 0 0.1"/>
            <parent link="base_link"/>
            <child link="arm_link"/>
            <axis xyz="0 0 1"/>
            <limit lower="-${pi/2}" upper="${pi/2}" effort="100" velocity="10"/>
        </joint>

        <link name="arm_link">
            <visual>
                <origin xyz="0 0 0.05"/>
                <geometry>
                    <box size="0.05 0.05 0.1"/>
                </geometry>
                <material name="black"/>
            </visual>

        </link>

</robot>